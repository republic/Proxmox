#list zfs pools
zpool list
#or
zpool list -v

#show stats 
zpool status
#or
zpool status -v

#show status
zpool iostat
#or
zpool iostat -v

#add cache to an existing pool
zpool add -f rpool cache sdf

#add log to an existing pool
zpool add -f rpool log sdg

#add cache and log to an existing pool
zpool add -f rpool log sdf1 cache sdf2

#scrub pool
zpool scrub rpool

#upgrade zfs pool
zpool upgrade rpool

#remove pool
zpool destroy rpool
